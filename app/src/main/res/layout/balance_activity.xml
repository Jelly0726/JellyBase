<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg">
    <!--↓↓↓↓↓自定义状态栏底色。↓↓↓↓↓-->
    <com.jelly.baselibrary.systemBar.StatusView
        android:id="@+id/status_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/navi_color"/>
    <!--↑↑↑↑↑自定义状态栏底色。↑↑↑↑↑-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100mm"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginBottom="1mm"
        android:background="@color/navi_color">
        <LinearLayout
            android:id="@+id/left_back"
            android:layout_width="100mm"
            android:layout_height="100mm"
            android:gravity="center_vertical"
            android:paddingLeft="20mm">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/left_back"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="30mm"
            android:text="余额"
            android:textColor="#313131"/>
        <LinearLayout
            android:layout_width="100mm"
            android:layout_height="100mm"
            android:gravity="center_vertical"
            android:paddingLeft="20mm">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="168mm"
        android:orientation="vertical"
        android:background="#c6e3fa"
        android:gravity="center_vertical"
        android:paddingLeft="30mm"
        android:paddingRight="30mm"
        android:paddingTop="16mm"
        android:paddingBottom="16mm">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#313131"
            android:textSize="24mm"
            android:text="余额（元）"/>
        <TextView
            android:id="@+id/balnace_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="#313131"
            android:gravity="center_vertical"
            android:layout_marginTop="16mm"
            android:textSize="40mm"
            android:text="10000"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/recharge_layout"
        android:layout_width="match_parent"
        android:layout_height="100mm"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:paddingLeft="30mm"
        android:paddingRight="30mm">
        <ImageView
            android:layout_width="52mm"
            android:layout_height="52mm"
            android:src="@mipmap/yuecz"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="20mm"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textSize="28mm"
            android:textColor="#313131"
            android:text="充值"/>
        <ImageView
            android:layout_width="30mm"
            android:layout_height="30mm"
            android:src="@mipmap/right_next"
            android:layout_gravity="center_vertical"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/withdraw_layout"
        android:layout_width="match_parent"
        android:layout_height="100mm"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:layout_marginTop="1mm"
        android:paddingLeft="30mm"
        android:paddingRight="30mm">
        <ImageView
            android:layout_width="52mm"
            android:layout_height="52mm"
            android:src="@mipmap/yetx"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="20mm"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textSize="28mm"
            android:textColor="#313131"
            android:text="提现"/>
        <ImageView
            android:layout_width="30mm"
            android:layout_height="30mm"
            android:src="@mipmap/right_next"
            android:layout_gravity="center_vertical"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/account_details"
        android:layout_width="match_parent"
        android:layout_height="100mm"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:layout_marginTop="16mm"
        android:paddingLeft="30mm"
        android:paddingRight="30mm">
        <ImageView
            android:layout_width="52mm"
            android:layout_height="52mm"
            android:src="@mipmap/zhmx"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="20mm"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textSize="28mm"
            android:textColor="#313131"
            android:text="账户明细"/>
        <ImageView
            android:layout_width="30mm"
            android:layout_height="30mm"
            android:src="@mipmap/right_next"
            android:layout_gravity="center_vertical"
            />
    </LinearLayout>
</LinearLayout>