<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="368mm"
        android:layout_height="495mm"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <com.base.bankcard.BandCardEditText
            android:id="@+id/bankCardEditText"
            android:layout_width="match_parent"
            android:padding="10mm"
            android:layout_height="100mm"
            android:hint="请输入银行卡号" />
        <TextView
            android:id="@+id/tv_desc"
            android:layout_marginTop="20mm"
            android:padding="10mm"
            android:layout_below="@+id/bankCardEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/bankNo"
            android:layout_width="match_parent"
            android:layout_height="100mm" />
        <Button
            android:id="@+id/saomiao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12mm"
            android:textColor="@color/black"
            android:text="扫描"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
