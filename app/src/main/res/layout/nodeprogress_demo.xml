<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#eeeeee"
    tools:context="com.base.nodeprogress.NodeProgressDemo">
    <!--↓↓↓↓↓自定义状态栏底色。↓↓↓↓↓-->
    <com.base.SystemBar.StatusView
        android:id="@+id/status_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/navi_color"/>
    <!--↑↑↑↑↑自定义状态栏底色。↑↑↑↑↑-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16mm"
        android:layout_below="@+id/status_view">

        <com.base.nodeprogress.NodeProgressView
            android:id="@+id/npv_NodeProgressView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:width="2mm"
            app:nodeRadius="5mm"
            app:nodeTextSize="12mm"/>

    </ScrollView>
</RelativeLayout>