<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginBottom="1px"
        android:background="#70ffffff">
        <LinearLayout
            android:id="@+id/left_back"
            android:layout_width="100px"
            android:layout_height="100px"
            android:gravity="center_vertical"
            android:paddingLeft="20px">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/left_back"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="30px"
            android:text="忘记密码"
            android:textColor="#313131"/>
        <LinearLayout
            android:layout_width="100px"
            android:layout_height="100px"
            android:gravity="center_vertical"
            android:paddingLeft="20px">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:layout_marginTop="220px"
        android:layout_marginLeft="80px"
        android:layout_marginRight="80px"
        android:orientation="horizontal"
        android:background="@drawable/bottom_stroke_w">
        <ImageView
            android:layout_width="40px"
            android:layout_height="40px"
            android:src="@mipmap/shouji"
            android:layout_gravity="center_vertical"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="40px"
            android:textColor="#727272"
            android:textSize="24px"
            android:background="@null"
            android:inputType="phone"
            android:lines="1"
            android:singleLine="true"
            android:hint="请输入手机号"
            android:textColorHint="#727272"/>
        <com.base.countdowntimerbtn.CountDownTimerButton
            android:id="@+id/btn_get_ver"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10px"
            android:background="#00000000"
            android:textColor="#27a02d"
            android:textSize="24px"
            android:text="发送验证码"
            android:gravity="center"
            android:stateListAnimator="@null"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:layout_marginLeft="80px"
        android:layout_marginRight="80px"
        android:orientation="horizontal"
        android:layout_marginTop="30px"
        android:background="@drawable/bottom_stroke_w">
        <ImageView
            android:layout_width="40px"
            android:layout_height="40px"
            android:src="@mipmap/mima"
            android:layout_gravity="center_vertical"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="40px"
            android:textColor="#727272"
            android:textSize="24px"
            android:background="@null"
            android:inputType="number"
            android:lines="1"
            android:singleLine="true"
            android:hint="请输入验证码"
            android:textColorHint="#727272"/>
    </LinearLayout>
    <TextView
        android:id="@+id/next_tv"
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:layout_marginTop="60px"
        android:layout_marginLeft="80px"
        android:layout_marginRight="80px"
        android:textColor="#ffffff"
        android:textSize="28px"
        android:text="下一步"
        android:gravity="center"
        android:background="@drawable/orange_btn_bg"/>
</LinearLayout>