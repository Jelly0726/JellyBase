<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:padding="16mm"
    tools:viewBindingIgnore="true">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_centerVertical="true"
    android:layout_alignParentStart="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="扇区:"
            android:textSize="24mm"
            />

        <EditText
            android:id="@+id/sector_num"
            android:layout_width="50mm"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5mm" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(从0开始)"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10mm"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="块:"
            android:textSize="24mm"
            />
        <EditText
            android:id="@+id/block_num"
            android:layout_width="50mm"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5mm"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(从0开始)"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10mm"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="写入数据:"
            android:textSize="24mm"
            />

        <EditText
            android:id="@+id/write_data"
            android:layout_width="0mm"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5mm"
            android:layout_weight="1" />
    </LinearLayout>

    <Button
        android:id="@+id/write_bn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10mm"
        android:text="写数据" />

    <Button
        android:id="@+id/read_bn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30mm"
        android:text="读数据" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10mm"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="读出数据:"
            android:textSize="24mm"
            />

        <EditText
            android:id="@+id/read_data"
            android:layout_width="0mm"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5mm"
            android:layout_weight="1" />
    </LinearLayout>
</LinearLayout>
</RelativeLayout>