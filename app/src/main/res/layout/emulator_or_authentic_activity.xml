<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg">
    <View
        android:id="@+id/topBg"
        android:layout_width="0mm"
        android:layout_height="80mm"
        android:background="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <!--↓↓↓↓↓↓↓↓自定义状态栏底色↓↓↓↓↓↓↓↓-->
    <com.jelly.baselibrary.systemBar.StatusView
        android:id="@+id/status_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <!--↑↑↑↑↑↑↑↑自定义状态栏底色↑↑↑↑↑↑↑↑-->
    <LinearLayout
        android:id="@+id/back_layout"
        android:layout_width="45mm"
        android:layout_height="0mm"
        android:layout_marginTop="0mm"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="@+id/topBg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/status_view">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16mm"
            android:src="@drawable/back" />
    </LinearLayout>

    <TextView
        android:id="@+id/title_tv"
        android:layout_width="wrap_content"
        android:layout_height="45mm"
        android:layout_marginTop="0mm"
        android:gravity="center"
        android:text="是否模拟器"
        android:textColor="#333"
        android:textSize="18mm"
        app:layout_constraintBottom_toBottomOf="@+id/topBg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/status_view" />
    <Button
        android:id="@+id/start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Java检测"
        android:layout_marginTop="20mm"
        app:layout_constraintTop_toBottomOf="@+id/topBg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <Button
        android:id="@+id/startJniNorm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jni标准模式检测"
        android:layout_marginTop="0mm"
        app:layout_constraintTop_toBottomOf="@+id/start"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <Button
        android:id="@+id/startJni"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jni安全模式检测"
        android:layout_marginTop="0mm"
        app:layout_constraintTop_toBottomOf="@+id/startJniNorm"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:id="@+id/result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="验证结果当前运行环境为:"
        android:layout_marginTop="30mm"
        app:layout_constraintTop_toBottomOf="@+id/startJni"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>