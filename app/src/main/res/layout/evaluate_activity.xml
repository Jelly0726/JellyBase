<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:rb="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg">
    <!--↓↓↓↓↓自定义状态栏底色。↓↓↓↓↓-->
    <com.base.sofia.StatusView
        android:id="@+id/status_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/navi_color"/>
    <!--↑↑↑↑↑自定义状态栏底色。↑↑↑↑↑-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50mm"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginBottom="1mm"
        android:background="@color/navi_color">
        <LinearLayout
            android:id="@+id/left_back"
            android:layout_width="50mm"
            android:layout_height="50mm"
            android:gravity="center_vertical"
            android:paddingLeft="20mm">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/left_back"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="15mm"
            android:text="订单评价"
            android:textColor="#313131"/>
        <LinearLayout
            android:id="@+id/top_right"
            android:layout_width="50mm"
            android:layout_height="50mm"
            android:gravity="center_vertical"
            android:paddingLeft="20mm">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14mm"
                android:gravity="center"
                android:textColor="#fe1212"
                android:text="发布"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="59mm"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#fff"
        android:layout_marginTop="8mm"
        android:paddingLeft="11mm"
        android:paddingRight="11mm"
        android:paddingTop="11mm"
        android:paddingBottom="11mm">
        <ImageView
            android:layout_width="34mm"
            android:layout_height="34mm"
            android:src="@mipmap/yumi"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14mm"
            android:textColor="#000"
            android:text="描述相符"
            android:layout_marginLeft="11mm"
            android:layout_marginRight="15mm"/>
        <com.willy.ratingbar.BaseRatingBar
            android:id="@+id/describeRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            rb:numStars="5"
            rb:rating="4"
            rb:starWidth="20mm"
            rb:starHeight="0mm"
            rb:starPadding="0mm"
            rb:stepSize="0.5"
            rb:isIndicator="false"
            rb:clickable="true"
            rb:scrollable="true"
            rb:clearRatingEnabled="true"
            rb:drawableEmpty="@mipmap/star_b_empty"
            rb:drawableFilled="@mipmap/star_b_full">
        </com.willy.ratingbar.BaseRatingBar>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90mm"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:background="#fff"
        android:layout_marginTop="8mm"
        android:paddingLeft="11mm"
        android:paddingRight="112mm"
        android:paddingTop="10mm"
        android:paddingBottom="10mm">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25mm"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="34mm"
                android:layout_height="wrap_content"
                android:src="@mipmap/shopcart_store"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14mm"
                android:textColor="#000"
                android:text="店铺评分"
                android:layout_marginLeft="11mm"
                android:layout_marginRight="15mm"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14mm"
                android:textColor="#727272"
                android:text="物流服务"
                android:layout_marginLeft="11mm"
                android:layout_marginRight="50mm"/>
            <com.willy.ratingbar.BaseRatingBar
                android:id="@+id/logisticsRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                rb:numStars="5"
                rb:rating="2"
                rb:starWidth="20mm"
                rb:starHeight="0mm"
                rb:starPadding="0mm"
                rb:stepSize="0.5"
                rb:isIndicator="false"
                rb:clickable="true"
                rb:scrollable="true"
                rb:clearRatingEnabled="true"
                rb:drawableEmpty="@mipmap/star_b_empty"
                rb:drawableFilled="@mipmap/star_b_full">
            </com.willy.ratingbar.BaseRatingBar>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14mm"
                android:textColor="#727272"
                android:text="商家服务"
                android:layout_marginLeft="11mm"
                android:layout_marginRight="50mm"/>
            <com.willy.ratingbar.BaseRatingBar
                android:id="@+id/storeRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                rb:numStars="5"
                rb:rating="2"
                rb:starWidth="20mm"
                rb:starHeight="0mm"
                rb:starPadding="0mm"
                rb:stepSize="0.5"
                rb:isIndicator="false"
                rb:clickable="true"
                rb:scrollable="true"
                rb:clearRatingEnabled="true"
                rb:drawableEmpty="@mipmap/star_b_empty"
                rb:drawableFilled="@mipmap/star_b_full">
            </com.willy.ratingbar.BaseRatingBar>
        </LinearLayout>

    </LinearLayout>
    <EditText
        android:id="@+id/content_ed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16mm"
        android:gravity="top|left"
        android:minHeight="90mm"
        android:background="#fff"
        android:paddingLeft="22mm"
        android:paddingRight="22mm"
        android:paddingTop="11mm"
        android:paddingBottom="11mm"
        android:textColor="#313131"
        android:textSize="12mm"
        android:hint="输入评价"/>
</LinearLayout>