<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15mm"
    android:layout_marginRight="5mm"
    android:layout_marginTop="5mm"
    android:background="#fff"
    tools:viewBindingIgnore="true">
    <ImageView
        android:id="@+id/apkIcon"
        android:layout_width="50mm"
        android:layout_height="50mm"
        android:layout_margin="4mm"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/appName"
        style="@style/TextAppearance.AppCompat.Body1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10mm"
        android:layout_toRightOf="@id/apkIcon"
        android:text="wechat" />

    <TextView
        android:id="@+id/extraMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/appName"
        android:layout_marginTop="3mm"
        android:layout_toRightOf="@id/apkIcon"
        android:text="未安装" />

    <CheckBox
        android:id="@+id/apk_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_margin="4mm" />

    <TextView
        android:id="@+id/sizeTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/apk_checkbox"
        android:text="2M" />
</RelativeLayout>