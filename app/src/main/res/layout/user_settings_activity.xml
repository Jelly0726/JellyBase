<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg">
    <!--↓↓↓↓↓自定义状态栏底色。↓↓↓↓↓-->
    <com.base.sofia.StatusView
        android:id="@+id/status_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/navi_color"/>
    <!--↑↑↑↑↑自定义状态栏底色。↑↑↑↑↑-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginBottom="1px"
        android:background="@color/navi_color">
        <LinearLayout
            android:id="@+id/left_back"
            android:layout_width="100px"
            android:layout_height="100px"
            android:gravity="center_vertical"
            android:paddingLeft="20px">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/left_back"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="30px"
            android:text="设置"
            android:textColor="#313131"/>
        <LinearLayout
            android:layout_width="100px"
            android:layout_height="100px"
            android:gravity="center_vertical"
            android:paddingLeft="20px">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/change_pwd"
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:orientation="horizontal"
        android:paddingRight="30px"
        android:paddingLeft="30px"
        android:gravity="center_vertical"
        android:background="#ffffff"
        android:visibility="gone"
        android:layout_marginLeft="16px"
        android:layout_marginRight="16px"
        android:layout_marginTop="16px">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="28px"
            android:textColor="#313131"
            android:text="更换密码"
            android:gravity="center_vertical"/>
        <ImageView
            android:layout_width="30px"
            android:layout_height="30px"
            android:src="@mipmap/right_next"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/change_phone"
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:orientation="horizontal"
        android:paddingRight="30px"
        android:paddingLeft="30px"
        android:gravity="center_vertical"
        android:background="#ffffff"
        android:visibility="gone"
        android:layout_marginLeft="16px"
        android:layout_marginRight="16px"
        android:layout_marginTop="1px">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="28px"
            android:textColor="#313131"
            android:text="更换手机号"
            android:gravity="center_vertical"/>
        <ImageView
            android:layout_width="30px"
            android:layout_height="30px"
            android:src="@mipmap/right_next"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/check_updata"
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:orientation="horizontal"
        android:paddingRight="30px"
        android:paddingLeft="30px"
        android:gravity="center_vertical"
        android:background="#ffffff"
        android:layout_marginLeft="16px"
        android:layout_marginRight="16px"
        android:layout_marginTop="1px">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="28px"
            android:textColor="#313131"
            android:text="检查更新"
            android:gravity="center_vertical"/>
        <ImageView
            android:layout_width="30px"
            android:layout_height="30px"
            android:src="@mipmap/right_next"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/about"
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:orientation="horizontal"
        android:paddingRight="30px"
        android:paddingLeft="30px"
        android:gravity="center_vertical"
        android:background="#ffffff"
        android:visibility="gone"
        android:layout_marginLeft="16px"
        android:layout_marginRight="16px"
        android:layout_marginTop="1px">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="28px"
            android:textColor="#313131"
            android:text="关于我们"
            android:gravity="center_vertical"/>
        <ImageView
            android:layout_width="30px"
            android:layout_height="30px"
            android:src="@mipmap/right_next"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"></View>
    <TextView
        android:id="@+id/exit_tv"
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:textSize="28px"
        android:layout_gravity="bottom"
        android:textColor="#fff"
        android:gravity="center"
        android:background="@drawable/productdetails_btn_bg_g"
        android:text="退出"/>
</LinearLayout>