<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    tools:context="com.jelly.jellybase.encrypt.EncryptActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <!--↓↓↓↓↓自定义状态栏底色。↓↓↓↓↓-->
        <com.base.sofia.StatusView
            android:id="@+id/status_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/navi_color"/>
        <!--↑↑↑↑↑自定义状态栏底色。↑↑↑↑↑-->
        <EditText
            android:id="@+id/input_ori"
            android:layout_width="match_parent"
            android:layout_height="200mm"
            android:background="#cacaca"
            android:layout_margin="10mm"
            android:hint="请输入有加密的字符串或者要解密的Base64字符串"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <Button
                android:id="@+id/btn_copy_sign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="复制"
                />
            <Button
                android:id="@+id/btn_past_sign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="粘贴"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/text_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textIsSelectable="true"
            android:layout_margin="10mm"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <Button
                android:id="@+id/btn_sha1OfApk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="获取sha1"
                />
            <Button
                android:id="@+id/btn_apk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="验证apk签名"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <Button
                android:id="@+id/btn_java_encode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HmacSHA1 加密"
                />
            <Button
                android:id="@+id/btn_native_encode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SHA1 加密"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <Button
                android:id="@+id/btn_java_decode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SHA224 加密"
                />
            <Button
                android:id="@+id/btn_native_decode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SHA256 加密"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <Button
                android:id="@+id/btn_java_sign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SHA384 加密"
                />
            <Button
                android:id="@+id/btn_native_sign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SHA512 加密"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <Button
                android:id="@+id/btn_md5_sign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="md5 加密"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <Button
                android:id="@+id/btn_AES_sign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AES加密"
                />
            <Button
                android:id="@+id/btn_AESs_sign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AES解密"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <Button
                android:id="@+id/btn_AES_key"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="动态KEY AES加密"
                />
            <Button
                android:id="@+id/btn_AESs_key"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="动态KEY AES解密"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <Button
                android:id="@+id/btn_RSA_sign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RSA加密"
                />
            <Button
                android:id="@+id/btn_RSAs_sign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RSA解密"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <Button
                android:id="@+id/btn_RSAa_sign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RSA加密带key"
                />
            <Button
                android:id="@+id/btn_RSAd_sign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RSA解密带key"
                />
        </LinearLayout>

    </LinearLayout>

</ScrollView>
