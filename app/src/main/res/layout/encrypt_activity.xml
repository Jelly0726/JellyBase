<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    tools:context="com.jelly.jellybase.encrypt.EncryptActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <EditText
            android:id="@+id/input_ori"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#cacaca"
            android:layout_margin="10dp"
            android:hint="请输入有加密的字符串或者要解密的Base64字符串"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <Button
                android:id="@+id/btn_java_encode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="JAVA AES 加密"
                />
            <Button
                android:id="@+id/btn_native_encode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Native AES 加密"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <Button
                android:id="@+id/btn_java_decode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="JAVA AES 解密"
                />
            <Button
                android:id="@+id/btn_native_decode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Native AES 解密"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <Button
                android:id="@+id/btn_java_sign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="JAVA生成sign"
                />
            <Button
                android:id="@+id/btn_native_sign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Native生成sign"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/text_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textIsSelectable="true"
            android:layout_margin="10dp"
            />

    </LinearLayout>

</ScrollView>
