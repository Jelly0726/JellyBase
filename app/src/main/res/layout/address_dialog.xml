<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/transparent">
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/main_bg">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white">
            <View
                android:layout_width="20mm"
                android:layout_height="20mm"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="45mm"
                android:layout_weight="1"
                android:paddingLeft="30mm"
                android:paddingRight="30mm"
                android:textColor="#727272"
                android:textSize="14mm"
                android:text=" 配送至"
                android:gravity="center"
                android:background="#ffffff"/>
            <ImageView
                android:id="@+id/cancel_img"
                android:layout_width="45mm"
                android:layout_height="45mm"
                android:padding="13mm"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/addcart_cancel"
                />
        </LinearLayout>

        <RadioGroup
            android:id="@+id/address_gp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="45mm"
            android:background="#ffffff"
            android:layout_marginTop="1mm">
            <RadioButton
                android:id="@+id/province_rb"
                android:layout_width="100mm"
                android:layout_height="match_parent"
                android:button="@null"
                android:gravity="center"
                android:background="@drawable/radiobutton_style_r"
                android:checked="true"
                android:textSize="14mm"
                android:textColor="@drawable/radiobutton_text_r"
                android:text="请选择"/>
            <RadioButton
                android:id="@+id/city_rb"
                android:layout_width="100mm"
                android:layout_height="match_parent"
                android:button="@null"
                android:gravity="center"
                android:background="@drawable/radiobutton_style_r"
                android:checked="false"
                android:visibility="gone"
                android:textSize="14mm"
                android:textColor="@drawable/radiobutton_text_r"
                android:text="请选择"/>
            <RadioButton
                android:id="@+id/district_rb"
                android:layout_width="100mm"
                android:layout_height="match_parent"
                android:button="@null"
                android:gravity="center"
                android:background="@drawable/radiobutton_style_r"
                android:checked="false"
                android:visibility="gone"
                android:textSize="14mm"
                android:textColor="@drawable/radiobutton_text_r"
                android:text="请选择"/>
        </RadioGroup>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="300mm"
            android:scrollbars="vertical"
            android:visibility="visible"
            android:layout_marginTop="1mm"
            android:background="#ffffff"/>
    </LinearLayout>
</LinearLayout>