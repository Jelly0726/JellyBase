<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg">
    <!--↓↓↓↓↓自定义状态栏底色。↓↓↓↓↓-->
    <com.base.sofia.StatusView
        android:id="@+id/status_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/navi_color"/>
    <!--↑↑↑↑↑自定义状态栏底色。↑↑↑↑↑-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginBottom="1px"
        android:background="@color/navi_color">
        <LinearLayout
            android:id="@+id/left_back"
            android:layout_width="100px"
            android:layout_height="100px"
            android:gravity="center_vertical"
            android:paddingLeft="20px">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/left_back"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="30px"
            android:text="更换手机号"
            android:textColor="#313131"/>
        <LinearLayout
            android:layout_width="100px"
            android:layout_height="100px"
            android:gravity="center_vertical"
            android:paddingLeft="20px">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:textSize="24px"
        android:textColor="#727272"
        android:text="请输入新的手机号码"
        android:gravity="center_vertical"
        android:paddingLeft="30px"
        android:paddingRight="30px"
        android:layout_marginLeft="16px"
        android:layout_marginRight="16px"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:layout_marginLeft="16px"
        android:layout_marginRight="16px"
        android:paddingLeft="30px"
        android:paddingRight="30px"
        android:background="#ffffff"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/phone_edit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="#aaaaaa"
            android:textSize="24px"
            android:lines="1"
            android:singleLine="true"
            android:inputType="phone"
            android:textColorHint="#aaaaaa"
            android:hint="新手机号"
            android:background="@null"/>
        <com.base.countdowntimerbtn.CountDownTimerButton
            android:id="@+id/btn_get_ver"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="#26b842"
            android:textSize="24px"
            android:text="发送验证码"
            android:background="#fff"
            android:gravity="center"
            android:stateListAnimator="@null"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:layout_marginTop="16px"
        android:layout_marginLeft="16px"
        android:layout_marginRight="16px"
        android:paddingLeft="30px"
        android:paddingRight="30px"
        android:background="#ffffff"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/verificationCode_edit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="#aaaaaa"
            android:textSize="24px"
            android:lines="1"
            android:singleLine="true"
            android:inputType="text"
            android:textColorHint="#aaaaaa"
            android:hint="验证码"
            android:background="@null"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:layout_marginTop="16px"
        android:layout_marginLeft="16px"
        android:layout_marginRight="16px"
        android:paddingLeft="30px"
        android:paddingRight="30px"
        android:background="#ffffff"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/password_edit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="#aaaaaa"
            android:textSize="24px"
            android:maxLength="16"
            android:lines="1"
            android:singleLine="true"
            android:inputType="textPassword"
            android:textColorHint="#aaaaaa"
            android:hint="账户密码"
            android:background="@null"/>
    </LinearLayout>
    <TextView
        android:id="@+id/ok_tv"
        android:layout_width="688px"
        android:layout_height="88px"
        android:textColor="#aaaaaa"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:textSize="30px"
        android:layout_marginTop="100px"
        android:background="@drawable/confirm_recharge_bg"
        android:text="确定"/>
</LinearLayout>