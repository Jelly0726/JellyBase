<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/amap_offline_common_title_btn_selector"
    android:paddingLeft="10mm" >

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="35mm"
        android:layout_marginLeft="15mm"
        android:layout_marginTop="35mm"
        android:text="北京"
        android:textColor="#313131"
        android:textSize="16mm" />

    <TextView
        android:id="@+id/name_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5mm"
        android:layout_toRightOf="@id/name"
        android:text="总大小"
        android:textColor="#000000"
        android:textSize="12mm" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="35mm"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15mm"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/download_progress_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="7mm"
            android:gravity="center_vertical"
            android:textColor="@color/gary"
            android:textSize="12mm" />

        <ImageView
            android:id="@+id/download_status_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="5mm"
            android:src="@drawable/amap_offlinearrow_download" />
    </LinearLayout>

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="0.5mm"
        android:layout_alignParentBottom="true"
        android:background="@color/gray_lite" />

</RelativeLayout>