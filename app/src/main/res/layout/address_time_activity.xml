<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee">
    <!--↓↓↓↓↓自定义状态栏底色。↓↓↓↓↓-->
    <com.jelly.baselibrary.systemBar.StatusView
        android:id="@+id/status_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/navi_color"/>
    <!--↑↑↑↑↑自定义状态栏底色。↑↑↑↑↑-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44mm"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:background="#ffffff"
        android:layout_marginTop="11mm"
        android:paddingLeft="10mm"
        android:paddingRight="10mm">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#313131"
            android:textSize="14mm"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10mm"
            android:text="生产地"/>
        <TextView
            android:id="@+id/select_address"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="#727272"
            android:textSize="12mm"
            android:gravity="center_vertical|right"
            android:layout_gravity="center_vertical"
            android:drawableRight="@drawable/arrow_drop_down_black_24dp"
            android:text=""/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40mm"
        android:orientation="horizontal"
        android:layout_marginTop="86mm"
        android:paddingLeft="15mm"
        android:paddingRight="15mm"
        android:background="#ffffff">
        <TextView
            android:layout_width="100mm"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textColor="#b7b7b7"
            android:textSize="12mm"
            android:visibility="gone"
            android:text="选择开始日期"/>
        <TextView
            android:id="@+id/begin_date"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|left"
            android:textColor="#313131"
            android:textSize="12mm"
            android:hint="选择开始日期"
            android:textColorHint="#b7b7b7"
            android:drawableRight="@drawable/arrow_drop_down_black_24dp"/>
    </LinearLayout>
</LinearLayout>