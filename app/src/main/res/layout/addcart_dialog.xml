<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#60000000">
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="232px"
        android:paddingTop="0px"
        android:paddingBottom="0px"
        android:paddingLeft="0px"
        android:paddingRight="0px">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="30px"
            android:paddingTop="30px"
            android:paddingLeft="310px"
            android:paddingRight="90px"
            android:background="#fff">
            <TextView
                android:id="@+id/goods_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#fe1212"
                android:textSize="28px"
                android:gravity="center_vertical"
                android:text="￥：20/斤"/>
            <TextView
                android:id="@+id/goods_repertory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20px"
                android:textColor="#313131"
                android:textSize="28px"
                android:gravity="center_vertical"
                android:text="库存200件"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/goods_pic"
            android:layout_width="250px"
            android:layout_height="250px"
            android:layout_marginTop="0px"
            android:layout_marginLeft="30px"
            android:layout_marginBottom="30px"
            android:padding="10px"
            android:scaleType="fitXY"
            android:src="@mipmap/yumi"
            android:elevation="5dp"
            android:background="@drawable/addcart_pic_bg"
            />
        <ImageView
            android:id="@+id/cancel_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/addcart_cancel"
            android:layout_alignParentRight="true"
            android:layout_marginTop="60px"
            android:layout_marginRight="30px"/>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#fff">
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#eeeeee"
            android:layout_marginLeft="30px"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="134px"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="30px"
        android:paddingRight="30px"
        android:background="#fff">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:textSize="30px"
            android:textColor="#313131"
            android:text="购买数量"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#fff">
            <TextView
                android:gravity="center"
                android:textSize="28px"
                android:text="—"
                android:id="@+id/reduce_goodsNum"
                android:layout_width="50dp"
                android:layout_height="35dp" />

            <TextView
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="28px"
                android:text="1"
                android:id="@+id/goods_Num"
                android:layout_width="match_parent"
                android:layout_height="35dp" />

            <TextView
                android:gravity="center"
                android:textSize="28px"
                android:text="+"
                android:id="@+id/increase_goods_Num"
                android:layout_width="50dp"
                android:layout_height="35dp" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#fff">
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#eeeeee"
            android:layout_marginLeft="30px"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="40px"
        android:background="#fff"/>
    <TextView
        android:id="@+id/confirm_tv"
        android:layout_width="match_parent"
        android:layout_height="98px"
        android:textSize="28px"
        android:textColor="#fff"
        android:gravity="center"
        android:text="确定"
        android:background="@drawable/payment_btn_bg"/>
</LinearLayout>
