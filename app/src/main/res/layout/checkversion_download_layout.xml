<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="20mm"
    android:layout_height="wrap_content"
    android:background="@color/main_bg">

    <androidx.core.widget.ContentLoadingProgressBar
        android:layout_width="match_parent"
        android:id="@+id/pb"
        style="?android:attr/progressBarStyleHorizontal"
        android:progressDrawable="@drawable/checkversion_progressbar_horizontal"
        android:max="100"
        android:progress="0"

        android:layout_height="15mm" />
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="15mm"
            android:textColor="#000000"
            android:text="@string/versionchecklib_downloading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/tv_progress"
            android:text="@string/versionchecklib_progress"
            android:textColor="#000000"
            android:textSize="15mm"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>