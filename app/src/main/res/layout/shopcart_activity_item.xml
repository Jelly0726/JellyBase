<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="110dp">
    <CheckBox
        android:id="@+id/select_box"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="17dp"
        android:background="@drawable/checkbox_style"
        android:button="@null"
        android:checked="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@drawable/white_round_r5"
        android:layout_marginLeft="44dp"
        android:layout_marginRight="17dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <com.base.imageView.ImageViewPlus
            android:id="@+id/photo_img"
            android:layout_width="73dp"
            android:layout_height="73dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="12dp"
            app:srcCompat="@drawable/ic_placeholder_figure"
            app:ivpRadius="5dp"
            app:ivpType="round"
            app:ivpBorderWidth="0dp"
            android:layout_gravity="center_vertical"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:id="@+id/name_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:textColor="#084051"
                android:textSize="12sp"
                android:lines="2"
                android:ellipsize="end"
                android:text=""/>
            <TextView
                android:id="@+id/price_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="28dp"
                android:textColor="#f57fdc"
                android:textSize="13sp"
                android:text="ï¿¥1600"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginRight="5dp"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="13dp"
            android:gravity="center">
            <ImageView
                android:id="@+id/add_img"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:padding="4dp"
                android:src="@mipmap/ic_count_add"/>
            <EditText
                android:id="@+id/num_edit"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="#084051"
                android:textSize="15sp"
                android:cursorVisible="true"
                android:gravity="center"
                android:focusable="false"
                android:lines="1"
                android:singleLine="true"
                android:minWidth="30dp"
                android:focusableInTouchMode="false"
                android:background="@color/transparent"
                android:text="12"/>
            <ImageView
                android:id="@+id/sub_img"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:padding="4dp"
                android:src="@mipmap/ic_count_sub"/>
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>