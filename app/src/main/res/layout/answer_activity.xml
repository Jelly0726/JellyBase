<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg">
    <!--↓↓↓↓↓自定义状态栏底色。↓↓↓↓↓-->
    <com.base.sofia.StatusView
        android:id="@+id/status_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/navi_color"/>
    <!--↑↑↑↑↑自定义状态栏底色。↑↑↑↑↑-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50mm"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginBottom="1mm"
        android:background="@color/navi_color">
        <LinearLayout
            android:id="@+id/left_back"
            android:layout_width="50mm"
            android:layout_height="50mm"
            android:gravity="center_vertical"
            android:paddingLeft="10mm">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/left_back"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="15mm"
            android:text="我来回答"
            android:textColor="#313131"/>
        <LinearLayout
            android:id="@+id/top_right"
            android:layout_width="50mm"
            android:layout_height="50mm"
            android:gravity="center_vertical|right"
            android:paddingRight="10mm">
            <ImageView
                android:layout_width="42mm"
                android:layout_height="42mm"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="15mm"
        android:paddingRight="15mm"
        android:paddingTop="11mm"
        android:paddingBottom="11mm"
        android:background="#ffffff">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/wt"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="11mm"
            android:gravity="center_vertical"
            android:textSize="14mm"
            android:textColor="#313131"
            android:text="这家店怎么样？"/>
    </LinearLayout>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="150mm"
        android:textColor="#313131"
        android:textSize="14mm"
        android:background="#ffffff"
        android:gravity="top|left"
        android:lineSpacingExtra="5mm"
        android:paddingTop="5mm"
        android:paddingBottom="5mm"
        android:paddingLeft="7mm"
        android:paddingRight="7mm"
        android:textColorHint="#959595"
        android:hint="请输入"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1mm"
        android:paddingTop="15mm"
        android:paddingLeft="15mm"
        android:paddingRight="15mm"
        android:paddingBottom="15mm"
        android:background="#ffffff"
        android:orientation="horizontal">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"/>
    <TextView
        android:id="@+id/let_me_answer"
        android:layout_width="match_parent"
        android:layout_height="44mm"
        android:textSize="14mm"
        android:textColor="#fff"
        android:gravity="center"
        android:background="@drawable/productdetails_btn_bg_g"
        android:text="提交"/>
</LinearLayout>