<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg">
    <!--↓↓↓↓↓自定义状态栏底色。↓↓↓↓↓-->
    <com.base.sofia.StatusView
        android:id="@+id/status_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/navi_color"/>
    <!--↑↑↑↑↑自定义状态栏底色。↑↑↑↑↑-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginBottom="1px"
        android:background="@color/navi_color">
        <LinearLayout
            android:id="@+id/left_back"
            android:layout_width="100px"
            android:layout_height="100px"
            android:gravity="center_vertical"
            android:paddingLeft="20px">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/left_back"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="30px"
            android:text="提现"
            android:textColor="#313131"/>
        <LinearLayout
            android:layout_width="100px"
            android:layout_height="100px"
            android:gravity="center_vertical"
            android:paddingLeft="20px">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/bank_tx"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:layout_marginTop="22px"
        android:paddingLeft="40px"
        android:paddingRight="20px"
        android:gravity="center_vertical"
        android:textSize="14sp"
        android:textColor="#000000"
        android:text="请选择提现银行卡"/>

    <LinearLayout
        android:id="@+id/change_bank"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_marginTop="22px"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:paddingLeft="40px"
        android:paddingRight="20px"
        android:visibility="gone">

        <ImageView
            android:id="@+id/bank_logo"
            android:layout_width="72px"
            android:layout_height="72px"
            android:layout_gravity="center_vertical"
            android:src="@drawable/yinlian" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="72px"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="28px"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/bank_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="中国银行"
                android:textColor="#313131"
                android:textSize="28px" />

            <TextView
                android:id="@+id/bank_no"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="尾号123"
                android:textColor="#727272"
                android:textSize="24px"
                android:visibility="visible" />
        </LinearLayout>

        <ImageView
            android:layout_width="30px"
            android:layout_height="30px"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/right_next" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:paddingTop="20px"
        android:paddingLeft="40px"
        android:paddingBottom="10px"
        android:textSize="28px"
        android:textColor="#313131"
        android:text="提现金额"
        android:background="#ffffff"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:layout_marginTop="0px"
        android:paddingLeft="40px">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:textSize="46px"
            android:textColor="#313131"
            android:text="¥"/>
        <EditText
            android:id="@+id/amount"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:textColor="#313131"
            android:textColorHint="#aaaaaa"
            android:textSize="24px"
            android:background="@null"
            android:hint="请输入提现金额"
            android:lines="1"
            android:singleLine="true"
            android:inputType="numberDecimal"/>
    </LinearLayout>
    <TextView
        android:id="@+id/charge_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="40px"
        android:paddingRight="40px"
        android:layout_marginTop="5dp"
        android:textColor="#313131"
        android:textSize="12sp"
        android:gravity="left"
        android:text="手续费：¥0元"/>
    <TextView
        android:id="@+id/commit_tv"
        android:layout_width="688px"
        android:layout_height="88px"
        android:textColor="#ffffff"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:textSize="30px"
        android:layout_marginTop="100px"
        android:background="@drawable/confirm_recharge_bg"
        android:text="确认提现"/>
</LinearLayout>