<?xml version="1.0" encoding="utf-8"?>
<com.jelly.baselibrary.cardView.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardBackgroundColor="#7cc879"
    card_view:cardCornerRadius="10mm"
    card_view:cardElevation="4mm"
    card_view:cardUseCompatPadding="false"
    card_view:cardPreventCornerOverlap="false"
    card_view:contentPadding="0mm"
    android:layout_height="200mm"
    android:layout_marginLeft="16mm"
    android:layout_marginRight="16mm"
    tools:viewBindingIgnore="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@mipmap/yinghangka">
        <ImageView
            android:id="@+id/bank_logo"
            android:layout_width="72mm"
            android:layout_height="72mm"
            android:layout_marginTop="16mm"
            android:layout_marginLeft="30mm"
            android:src="@drawable/yinlian" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="10mm"
            android:layout_marginLeft="20mm"
            android:layout_marginBottom="30mm"
            android:layout_marginTop="16mm"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/bank_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="#ffffff"
                android:textSize="28mm"
                android:text="中国银行"/>
            <TextView
                android:id="@+id/card_type"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="#ffffff"
                android:textSize="24mm"
                android:text="储蓄卡"/>
            <TextView
                android:id="@+id/bank_no"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="#ffffff"
                android:textSize="28mm"
                android:text="**** **** **** 123"/>

        </LinearLayout>
        <TextView
            android:id="@+id/tag_tv"
            android:layout_width="160mm"
            android:layout_height="50mm"
            android:layout_marginTop="10mm"
            android:textSize="28mm"
            android:gravity="center"
            android:text="默认银行卡"
            android:textColor="#fa9191"
            android:background="@drawable/default_bank_bg"/>
    </LinearLayout>
</com.jelly.baselibrary.cardView.CardView>