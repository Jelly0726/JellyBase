<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- 连框颜色值 -->
    <item>
        <shape>
            <stroke
                android:dashGap="0dp"
                android:dashWidth="1dp"
                android:color="#eeeeee"
                android:width="1dp"/>
        </shape>
    </item>
    <!-- 主体背景颜色值 -->
    <!-- 此处定义只有上下两边有边框 高度为1像素-->
    <item
        android:bottom="1dp"
        android:top="0dp"
        android:left="0dp"
        android:right="0dp">
        <!--边框里面背景颜色 白色-->
        <shape>
            <solid android:color="#ffffff" />
        </shape>
    </item>
</layer-list>