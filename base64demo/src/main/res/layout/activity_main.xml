<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="vite.demo.MainActivity">

    <EditText
        android:id="@+id/input_ori"
        android:layout_width="match_parent"
        android:layout_height="200mm"
        android:layout_margin="10mm"
        android:background="#cacaca"
        android:hint="请输入有加密的字符串或者要解密的Base64字符串" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_copy_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="复制" />

        <Button
            android:id="@+id/btn_past_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="粘贴" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_en"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="base64编码" />

        <Button
            android:id="@+id/btn_den"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="base64解码" />
    </LinearLayout>

    <TextView
        android:id="@+id/text_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10mm"
        android:textIsSelectable="true" />
</LinearLayout>
