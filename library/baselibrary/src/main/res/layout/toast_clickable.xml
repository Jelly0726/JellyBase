<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:background="@drawable/toast_bg"
              android:paddingBottom="10mm"
              android:paddingEnd="12mm"
              android:paddingLeft="16mm"
              android:paddingRight="12mm"
              android:paddingStart="16mm"
              android:paddingTop="10mm">

    <!--<com.facebook.drawee.view.SimpleDraweeView-->
        <!--android:id="@+id/icon"-->
        <!--android:layout_width="24mm"-->
        <!--android:layout_height="24mm"-->
        <!--android:layout_marginEnd="8mm"-->
        <!--android:layout_marginRight="8mm"-->
        <!--android:scaleType="centerCrop"-->
        <!--android:visibility="gone"/>-->

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="16mm"
        android:layout_marginRight="16mm"
        android:textColor="@android:color/white"/>

    <View
        android:id="@+id/divider"
        android:layout_width="1mm"
        android:layout_height="match_parent"
        android:layout_marginBottom="4mm"
        android:layout_marginEnd="16mm"
        android:layout_marginRight="16mm"
        android:layout_marginTop="4mm"
        android:background="@android:color/white"/>

    <LinearLayout
        android:id="@+id/btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:visibility="gone">

        <TextView
            android:id="@+id/btn_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="4mm"
            android:layout_marginRight="4mm"
            android:textColor="@android:color/white"/>

        <ImageView
            android:id="@+id/btn_icon"
            android:layout_width="20mm"
            android:layout_height="20mm"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/ic_toast_play_arrow_white"/>
    </LinearLayout>
</LinearLayout>