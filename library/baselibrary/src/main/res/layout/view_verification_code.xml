<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="42mm"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tvVerification1"
        android:layout_width="50mm"
        android:layout_height="42mm"
        android:layout_gravity="center"
        android:background="@drawable/ver_code_bg_text_normal"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="22mm"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvVerification2"
        android:layout_width="50mm"
        android:layout_height="42mm"
        android:layout_gravity="center"
        android:background="@drawable/ver_code_bg_text_normal"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="22mm"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/tvVerification1"
        app:layout_constraintRight_toLeftOf="@+id/tvVerification3"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvVerification3"
        android:layout_width="50mm"
        android:layout_height="42mm"
        android:layout_gravity="center"
        android:background="@drawable/ver_code_bg_text_normal"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="22mm"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/tvVerification2"
        app:layout_constraintRight_toLeftOf="@+id/tvVerification4"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvVerification4"
        android:layout_width="50mm"
        android:layout_height="42mm"
        android:layout_gravity="center"
        android:background="@drawable/ver_code_bg_text_normal"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="22mm"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/tvVerification3"
        app:layout_constraintRight_toLeftOf="@+id/tvVerification5"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvVerification5"
        android:layout_width="50mm"
        android:layout_height="42mm"
        android:layout_gravity="center"
        android:background="@drawable/ver_code_bg_text_normal"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="22mm"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/tvVerification4"
        app:layout_constraintRight_toLeftOf="@+id/tvVerification6"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvVerification6"
        android:layout_width="50mm"
        android:layout_height="42mm"
        android:layout_gravity="center"
        android:background="@drawable/ver_code_bg_text_normal"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="22mm"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etVerification"
        android:layout_width="0mm"
        android:layout_height="42mm"
        android:background="@color/transparent"
        android:cursorVisible="false"
        android:inputType="numberPassword"
        android:textColor="@color/transparent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>