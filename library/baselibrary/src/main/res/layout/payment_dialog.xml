<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#60000000"
    tools:viewBindingIgnore="true">
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/payment_bg">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50mm"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="0mm"
            android:paddingBottom="0mm"
            android:paddingLeft="15mm"
            android:paddingRight="15mm"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textColor="#111111"
                android:textSize="15mm"
                android:text="选择支付方式"/>
            <TextView
                android:id="@+id/cancle_tv"
                android:layout_width="50mm"
                android:layout_height="match_parent"
                android:textSize="12mm"
                android:textColor="#FF2530"
                android:gravity="center"
                android:text="取消"
                />
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/mRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="250mm"
            />
        <TextView
            android:id="@+id/confirm_tv"
            android:layout_width="match_parent"
            android:layout_height="44mm"
            android:textSize="14mm"
            android:textColor="#fff"
            android:gravity="center"
            android:text="确定"
            android:layout_marginLeft="18mm"
            android:layout_marginRight="18mm"
            android:layout_marginBottom="7mm"
            android:background="@drawable/payment_btn_bg"/>
    </LinearLayout>
</LinearLayout>
