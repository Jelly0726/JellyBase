<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="RtlHardcoded,HardcodedText,RtlSymmetry,SmallSp"
    tools:viewBindingIgnore="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="61mm"
        android:layout_marginTop="28mm"
        android:layout_marginRight="30mm"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/subscribe_date_bg">
        <ImageView
            android:id="@+id/previousTwo"
            android:layout_width="60mm"
            android:layout_height="match_parent"
            android:padding="20mm"
            android:visibility="gone"
            android:layout_marginLeft="30mm"
            app:srcCompat="@drawable/ic_previous_white_two"/>
        <ImageView
            android:id="@+id/previous"
            android:layout_width="60mm"
            android:layout_height="match_parent"
            android:padding="20mm"
            android:layout_marginLeft="30mm"
            app:srcCompat="@drawable/ic_previous_white"/>
        <TextView
            android:id="@+id/tv_month_day"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="20mm"
            android:textStyle="bold"
            tools:ignore="RtlSymmetry" />
        <ImageView
            android:id="@+id/next"
            android:layout_width="60mm"
            android:layout_height="match_parent"
            android:padding="20mm"
            android:layout_marginRight="30mm"
            app:srcCompat="@drawable/ic_white_next"/>
        <ImageView
            android:id="@+id/nextTwo"
            android:layout_width="60mm"
            android:layout_height="match_parent"
            android:padding="20mm"
            android:visibility="gone"
            android:layout_marginRight="30mm"
            app:srcCompat="@drawable/ic_white_next_two"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/close"
        android:layout_width="60mm"
        android:layout_height="60mm"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@mipmap/ic_close"/>
    <com.haibin.calendarview.CalendarLayout
        android:id="@+id/calendarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="30mm"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical"
        android:layout_marginTop="81mm">
        <com.haibin.calendarview.CalendarView
            android:id="@+id/calendarView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10mm"
            app:calendar_padding="10mm"
            android:background="@drawable/date_picker_white_bg"
            app:select_mode="single_mode"
            app:month_view="com.base.datePicker.CustomMonthView"
            app:calendar_height="46mm"
            app:current_day_lunar_text_color="@color/white"
            app:current_day_text_color="@color/mainText"
            app:current_month_lunar_text_color="@color/white"
            app:current_month_text_color="@color/mainText"
            app:min_year="2004"
            app:other_month_text_color="@color/mainText3"
            app:scheme_text="假"
            app:scheme_text_color="@color/mainText3"
            app:scheme_theme_color="@color/mainText3"
            app:selected_text_color="@color/white"
            app:selected_lunar_text_color="@color/mainText"
            app:selected_theme_color="@color/mainText5"
            app:week_text_color="@color/white"
            app:week_background="@color/mainText15"
            app:week_bar_view="com.base.datePicker.CustomWeekBar"
            app:week_view="com.base.datePicker.CustomWeekView"
            app:year_view="com.base.datePicker.CustomYearView"
            app:year_view_day_text_color="@color/mainText"
            app:year_view_day_text_size="9mm"
            app:year_view_month_text_color="@color/mainText5"
            app:year_view_month_text_size="20mm"
            app:year_view_scheme_color="@color/mainText5"
            app:year_view_select_text_color="@color/white"
            app:year_view_week_height="12mm"
            app:year_view_week_text_color="@color/mainText"
            app:year_view_week_text_size="6mm"/>
    </com.haibin.calendarview.CalendarLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
