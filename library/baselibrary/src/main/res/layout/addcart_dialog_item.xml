<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
        <TextView
            android:id="@+id/titleTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#111111"
            android:textSize="14mm"
            android:text="选择分类"
            android:layout_marginLeft="18mm"
            android:layout_marginTop="0mm"/>
        <com.jelly.baselibrary.view.FlowLayout
            android:id="@+id/classify_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0mm"
            android:layout_marginBottom="10mm"
            android:layout_marginLeft="16mm"
            android:layout_marginRight="6mm">
        </com.jelly.baselibrary.view.FlowLayout>
</LinearLayout>