<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="MiddleBarItem">
        <!--默认状态下的图标-->
        <attr name="mIconNormal" format="reference"/>
        <!--选中状态下的图标-->
        <attr name="mIconSelected" format="reference"/>
        <!--item的高度-->
        <attr name="mItemHeight" format="dimension"/>
        <!--文字-->
        <attr name="mItemText" format="string"/>
        <!--文字大小-->
        <attr name="mItemTextSize" format="dimension"/>
        <!--默认状态下的文字颜色-->
        <attr name="mTextColorNormal" format="color"/>
        <!--选中状态下的文字颜色-->
        <attr name="mTextColorSelected" format="color"/>
        <!--是否开启触摸背景效果-->
        <attr name="mOpenTouchBg" format="boolean"/>
        <!--设置触摸背景-->
        <attr name="mTouchDrawable" format="reference"/>
        <!--设置图标的宽度-->
        <attr name="mIconWidth" format="dimension"/>
        <!--设置图标的高度-->
        <attr name="mIconHeight" format="dimension"/>
        <!--设置TopBarItem的padding-->
        <attr name="mItemPadding" format="dimension"/>
        <!-- 图标与文字的布局 -->
        <attr name="mOrientation" format="enum">
            <!--水平-->
            <enum name="horizontal" value="0"/>
            <!--垂直-->
            <enum name="vertical" value="1"/>
        </attr>
    </declare-styleable>
</resources>