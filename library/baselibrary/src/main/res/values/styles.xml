<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">-->
        <!--Customize your theme here.-->
        <item name="android:windowBackground">@color/transparent</item>
        <!--解决Only fullscreen opaque activities can request orientation 和 设置横屏不起作用 不设置
       windowIsTranslucent
       windowSwipeToDismiss
       windowIsFloating
       为 true -->
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowAnimationStyle">@style/left_animstyle</item>
        <!--<item name="colorPrimary">@color/colorPrimary</item>-->
        <!--<item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
        <!--<item name="colorAccent">@color/colorAccent</item>-->
    </style>
    <!--使用图片的方案 需要注意的是：Splash页面的背景颜色需要设置为透明 #00000000，不要设置其他背景，否则会导致图片的伸缩变形。-->
    <style name="SplashThemeImage" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <!--↓↓↓↓↓↓进出动画从下方出进↓↓↓↓↓↓-->
    <style name="Anim_bottom" parent="android:Theme.Light.NoTitleBar">
        <item name="android:windowAnimationStyle">@style/bottom</item>
    </style>

    <style name="bottom" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/bottom_in</item>
        <item name="android:activityOpenExitAnimation">@anim/bottom_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/bottom_out</item>
        <item name="android:activityCloseExitAnimation">@anim/bottom_in</item>
    </style>
    <style name="left_animstyle" parent="@android:style/Animation.Activity">
        <!--指的是，进入B时的动画。-->
        <item name="android:activityOpenEnterAnimation">@anim/left_in</item>
        <!--指的是进入B时，A的动画，与B的动画是一起显示的。-->
        <item name="android:activityOpenExitAnimation">@anim/left_out</item>
        <!--通过B跳转到C后，后退到B时，B的进入动画-->
        <item name="android:activityCloseEnterAnimation">@anim/left_in</item>
        <!--通过B跳转到C后，后退到B时，C的退出动画-->
        <item name="android:activityCloseExitAnimation">@anim/left_out</item>
    </style>

    <style name="dialog_animstyle">
        <item name="android:windowEnterAnimation">@anim/bottom_in</item>
        <item name="android:windowExitAnimation">@anim/bottom_out</item>
    </style>
    <!--↑↑↑↑↑↑↑进出动画从下方出进↑↑↑↑↑↑↑-->
    <!--↓↓↓↓↓↓去除activity动画↓↓↓↓↓↓-->
    <style name="Animation">
        <item name="android:activityOpenEnterAnimation">@null</item>
        <item name="android:activityOpenExitAnimation">@null</item>
        <item name="android:activityCloseEnterAnimation">@null</item>
        <item name="android:activityCloseExitAnimation">@null</item>
        <item name="android:taskOpenEnterAnimation">@null</item>
        <item name="android:taskOpenExitAnimation">@null</item>
        <item name="android:taskCloseEnterAnimation">@null</item>
        <item name="android:taskCloseExitAnimation">@null</item>
        <item name="android:taskToFrontEnterAnimation">@null</item>
        <item name="android:taskToFrontExitAnimation">@null</item>
        <item name="android:taskToBackEnterAnimation">@null</item>
        <item name="android:taskToBackExitAnimation">@null</item>
    </style>
    <!--↑↑↑↑↑↑↑去除activity动画↑↑↑↑↑↑↑-->
</resources>